<Window
    x:Class="Desktop.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:Desktop.ViewModels"
    Title=""
    d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
    lex:ResxLocalizationProvider.DefaultAssembly="Desktop"
    lex:ResxLocalizationProvider.DefaultDictionary="Lang"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ObjectDataProvider
            x:Key="LanguageProvider"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="vm:Language" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Border
        Background="BlanchedAlmond"
        BorderBrush="SeaGreen"
        BorderThickness="2">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Text="{lex:Loc Settings_Title}"
                TextAlignment="Center" />

            <StackPanel Grid.Row="1" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="{lex:Loc Settings_Language}" Target="{Binding ElementName=LanguageOption}" />
                    <ComboBox
                        x:Name="LanguageOption"
                        Margin="100,0,0,0"
                        ItemsSource="{Binding Source={StaticResource LanguageProvider}}"
                        SelectedItem="{Binding CurrentLanguge}" />
                </StackPanel>
                <!--<StackPanel Orientation="Horizontal">
                <Label Content="Current" />
                <TextBlock Text="{Binding SelectedLanguage}" />
            </StackPanel>-->
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,100,0"
                    Command="{Binding SaveCommand}"
                    Content="{lex:Loc Settings_Save}" />
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding ApplyCommand}"
                    Content="{lex:Loc Settings_Apply}" />
                <Button Command="{Binding CloseCommand}" Content="{lex:Loc Settings_Close}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
