<Window
    x:Class="Desktop.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:vm="clr-namespace:Desktop.ViewModels"
    Title="{lex:Loc MainWindow_Title}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    lex:ResxLocalizationProvider.DefaultAssembly="Desktop"
    lex:ResxLocalizationProvider.DefaultDictionary="Lang"
    mc:Ignorable="d">
    <Window.Resources>
        <local:NullableDoubleToStringConverter x:Key="NullableDoubleToStringConverter" />
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed" />
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{lex:Loc MainWindow_File}">
                <Separator />
                <MenuItem Command="ApplicationCommands.Close" Header="{lex:Loc MainWindow_Exit}" />
            </MenuItem>
            <MenuItem Header="{lex:Loc MainWindow_Edit}">
                <MenuItem
                    Command="{Binding OpenSettingsCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Header="{lex:Loc MainWindow_Settings}" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Label Content="Status:" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <syncfusion:SfChart>
                <syncfusion:SfChart.PrimaryAxis>
                    <syncfusion:DateTimeAxis
                        Interval="100"
                        IntervalType="Milliseconds"
                        LabelFormat="mm:ss"
                        Maximum="{Binding EndTime}"
                        Minimum="{Binding StartTime}" />
                </syncfusion:SfChart.PrimaryAxis>

                <syncfusion:SfChart.SecondaryAxis>
                    <syncfusion:NumericalAxis Interval="0.1" SmallTicksPerInterval="3" />
                </syncfusion:SfChart.SecondaryAxis>

                <syncfusion:FastLineSeries
                    ItemsSource="{Binding DataCollection}"
                    XBindingPath="Timestamp"
                    YBindingPath="Value" />
            </syncfusion:SfChart>

            <GridSplitter Grid.Column="0" />


            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="{Binding Data, Converter={StaticResource NullableDoubleToStringConverter}}" />
            </StackPanel>
        </Grid>


    </DockPanel>
</Window>
